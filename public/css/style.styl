@import 'nib/vendor'
vendor-prefixes = o ms webkit moz official

Blue = #3f51b5
DarkBlue = #303f9f
Green = #64dd17
Grey = #666666

/*-------CONFIGURACION VISTA SMARTPHONE----------*/
body
	font-family 'Roboto'
	font-size 16px
	
/*Section Header*/
.Header
	background Blue
	border-top 1em solid DarkBlue
	color white
	font-size .73em
	position relative
	padding-bottom 2em
	box-shadow 0 1px 2px Grey
.Header-contentMe
	margin 4em 8em 0 0
.Header-title
	text-align right
	margin 0
.Header-career
.Header-organizer
	margin 0
	text-align right
.Header-community
	color Green
.Header-avatarContent
	width 100%
	position absolute
	top 3.5em
.Header-avatar
	right 1em
	position absolute
	width 6em
	background white
	border-radius 50%

